<Window x:Class="Loja.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnVoltarLogin" Content="Voltar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="btnVoltarLogin_Click"/>

        <Label Content="ID Funcionário" Margin="27,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtIdFuncionario" Width="120" Margin="27,90,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Label Content="Usuário" Margin="27,130,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtUsuario" Width="120" Margin="27,160,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Label Content="Senha" Margin="27,200,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <PasswordBox x:Name="txtSenha" Width="120" Margin="27,230,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button x:Name="btnCadastrarLogin" Content="Cadastrar" Width="120" Margin="27,270,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnCadastrarLogin_Click"/>

        <TextBox x:Name="txtBuscaLogin" Width="150" Margin="445,308,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button x:Name="btnBuscarLogin" Content="Buscar" Width="80" Margin="605,308,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnBuscarLogin_Click"/>
        <Button x:Name="btnLimparBuscaLogin" Content="Limpar" Width="80" Margin="695,308,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnLimparBuscaLogin_Click"/>
        <Button x:Name="btnExcluirLogin" Content="Excluir" Width="80" Margin="47,308,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnExcluirLogin_Click"/>

        <DataGrid x:Name="dgLogin"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionChanged="dgLogin_SelectionChanged"
                  Margin="178,35,25,147">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="ID Funcionário" Binding="{Binding IdFuncionario}" Width="100"/>
                <DataGridTextColumn Header="Usuário" Binding="{Binding Usuario}" Width="150"/>
                <DataGridTextColumn Header="Senha (Hash)" Binding="{Binding Senha}" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Pesquisar" HorizontalAlignment="Center" Margin="0,304,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>

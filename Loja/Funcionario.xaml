<Window x:Class="Loja.Funcionario"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Funcionario" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="btnVoltarFuncionario" Content="Voltar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="btnVoltarFuncionario_Click"/>

        <Label Content="Nome" Margin="27,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtNomeFuncionario" Width="120" Margin="27,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Label Content="Email" Margin="27,92,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtEmailFuncionario" Width="120" Margin="27,122,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Label Content="Cargo" Margin="27,157,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtCargoFuncionario" Width="120" Margin="27,187,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Label Content="Telefone" Margin="27,226,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtTelefoneFuncionario" Width="120" Margin="27,256,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Label Content="Endereço" Margin="27,296,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtEnderecoFuncionario" Width="120" Margin="27,326,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button x:Name="btnCadastrarFuncionario" Content="Cadastrar" Width="120" Margin="27,366,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnCadastrarFuncionario_Click"/>

        <TextBox x:Name="txtBuscaFuncionario" Width="150" Margin="446,304,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button x:Name="btnBuscarFuncionario" Content="Buscar" Width="80" Margin="606,304,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnBuscarFuncionario_Click"/>
        <Button x:Name="btnLimparBuscaFuncionario" Content="Limpar" Width="80" Margin="696,304,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnLimparBuscaFuncionario_Click"/>
        <Button x:Name="btnExcluirFuncionario" Content="Excluir" Width="80" Margin="164,366,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnExcluirFuncionario_Click"/>

        <DataGrid x:Name="dgFuncionario"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionChanged="dgFuncionario_SelectionChanged"
                  Margin="178,35,25,147">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Cargo" Binding="{Binding Cargo}" Width="100"/>
                <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="100"/>
                <DataGridTextColumn Header="Endereço" Binding="{Binding Endereco}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Pesquisar" HorizontalAlignment="Left" Margin="381,296,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnGerenciarLogin" Content="Gerenciar" HorizontalAlignment="Left" Margin="481,351,0,0" VerticalAlignment="Top" Click="btnGerenciarLogin_Click"/>
        <Label Content="Gerenciar Login" HorizontalAlignment="Left" Margin="383,348,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>

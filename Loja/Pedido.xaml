<Window x:Class="Loja.Pedido"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pedidos" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Canvas Background="White">

    
        <Label Content="ID Cliente:" Canvas.Left="36" Canvas.Top="167"/>
        <TextBox x:Name="txtIdCliente" Width="100" Canvas.Left="116" Canvas.Top="167"/>
        <Button x:Name="btnCadastrarPedido" Content="Cadastrar Pedido" Width="150" Canvas.Left="236" Canvas.Top="165" Click="btnCadastrarPedido_Click"/>

        
        <Label Content="Buscar por:" Canvas.Left="36" Canvas.Top="207"/>
        <ComboBox x:Name="cbTipoBusca" Width="120" Canvas.Left="116" Canvas.Top="207">
            <ComboBoxItem Content="ID do Pedido" IsSelected="True"/>
            <ComboBoxItem Content="ID do Cliente"/>
        </ComboBox>

        <TextBox x:Name="txtBusca" Width="100" Canvas.Left="251" Canvas.Top="207" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="btnBuscarPedido" Content="Buscar" Width="80" Canvas.Left="356" Canvas.Top="205" Click="btnBuscarPedido_Click"/>
        <Button x:Name="btnLimparBuscaPedido" Content="Limpar" Width="80" Canvas.Left="446" Canvas.Top="205" Click="btnLimparBuscaPedido_Click"/>
        <Button x:Name="btnExcluirPedido" Content="Excluir Pedido" Width="120" Canvas.Left="536" Canvas.Top="205" Click="btnExcluirPedido_Click"/>

        <DataGrid x:Name="dgPedido" Width="828" Height="288" Canvas.Left="36" Canvas.Top="252"
                  AutoGenerateColumns="False" SelectionChanged="dgPedido_SelectionChanged" HorizontalAlignment="Center" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="ID Cliente" Binding="{Binding IdCliente}" Width="100"/>
                <DataGridTextColumn Header="Data" Binding="{Binding DataPedido}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnVoltarPedido" Content="Voltar" Canvas.Left="10" Canvas.Top="10" Click="btnVoltarPedido_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="btnGerenciarItens" Content="Gerenciar" Canvas.Left="198" Canvas.Top="130" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnGerenciarItens_Click"/>
        <Label Content="Gerenciar Itens dos Pedidos" Canvas.Left="36" Canvas.Top="127" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="btnGerenciarPagamentos" Content="Gerenciar" Canvas.Left="198" Canvas.Top="89" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.452,0.914" Click="btnGerenciarPagamentos_Click"/>
        <Label Content="Gerenciar Pagamentos" Canvas.Left="36" Canvas.Top="86" HorizontalAlignment="Center" VerticalAlignment="Top"/>

    </Canvas>
</Window>

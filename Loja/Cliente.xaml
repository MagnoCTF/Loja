<Window x:Class="Loja.Cliente"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Loja"
        mc:Ignorable="d"
        Title="Cliente" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="btnVoltarCliente" Content="Voltar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="btnVoltarCliente_Click"/>
        <TextBox x:Name="txtNomeCliente" HorizontalAlignment="Left" Margin="27,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Nome" HorizontalAlignment="Left" Margin="27,73,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmailCliente" HorizontalAlignment="Left" Margin="27,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="E-mail" HorizontalAlignment="Left" Margin="27,129,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTelefoneCliente" HorizontalAlignment="Left" Margin="27,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" SelectionOpacity="0.1"/>
        <Label Content="Telefone" HorizontalAlignment="Left" Margin="27,185,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEnderecoCliente" HorizontalAlignment="Left" Margin="27,278,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Endereço" HorizontalAlignment="Left" Margin="28,247,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCadastrarCliente" Content="Cadastrar" HorizontalAlignment="Left" Margin="27,329,0,0" VerticalAlignment="Top" Click="btnCadastrarCliente_Click"/>
        <DataGrid x:Name="dgCliente"
          SelectionChanged="dgCliente_SelectionChanged"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          CanUserAddRows="False"
          Margin="178,35,25,147">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="100"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="150"/>
                <DataGridTextColumn Header="Endereço" Binding="{Binding Endereco}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnEcluirCliente" Content="Excluir" HorizontalAlignment="Left" Margin="119,329,0,0" VerticalAlignment="Top" Click="btnEcluirCliente_Click"/>
        <TextBox x:Name="txtBuscaCliente" HorizontalAlignment="Left" Margin="464,311,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Pesquisar por Nome" HorizontalAlignment="Center" Margin="0,307,0,0" VerticalAlignment="Top"/>
        <Button Content="Pesquisar" HorizontalAlignment="Left" Margin="603,309,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Limpar Pesquisa" HorizontalAlignment="Left" Margin="671,309,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>

    </Grid>
</Window>

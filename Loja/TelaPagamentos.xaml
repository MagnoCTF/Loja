<Window x:Class="Loja.TelaPagamentos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pagamentos" Height="500" Width="850" WindowStartupLocation="CenterScreen">
    <Canvas Background="White">

      
        <Label Content="ID Pedido:" Canvas.Left="40" Canvas.Top="60"/>
        <TextBox x:Name="txtIdPedido" Width="100" Canvas.Left="40" Canvas.Top="90"/>

        <Label Content="Forma de Pagamento:" Canvas.Left="40" Canvas.Top="130"/>
        <ComboBox x:Name="cbFormaPagamento" Width="150" Canvas.Left="40" Canvas.Top="160">
            <ComboBoxItem Content="Dinheiro"/>
            <ComboBoxItem Content="Cartão de Crédito"/>
            <ComboBoxItem Content="Cartão de Débito"/>
            <ComboBoxItem Content="Boleto"/>
            <ComboBoxItem Content="Pix"/>
        </ComboBox>

        <Button x:Name="btnCadastrarPagamento" Content="Cadastrar Pagamento" Width="150" Canvas.Left="40" Canvas.Top="200" Click="btnCadastrarPagamento_Click"/>

  
        <Label Content="Buscar por ID Pedido:" Canvas.Left="260" Canvas.Top="409"/>
        <TextBox x:Name="txtBuscaPedido" Width="100" Canvas.Left="400" Canvas.Top="409"/>
        <Button x:Name="btnBuscarPagamento" Content="Buscar" Width="80" Canvas.Left="510" Canvas.Top="407" Click="btnBuscarPagamento_Click"/>
        <Button x:Name="btnLimparBuscaPagamento" Content="Limpar" Width="80" Canvas.Left="600" Canvas.Top="407" Click="btnLimparBuscaPagamento_Click"/>
        <Button x:Name="btnRemoverPagamento" Content="Remover Pagamento" Width="120" Canvas.Left="690" Canvas.Top="407" Click="btnRemoverPagamento_Click"/>

        <DataGrid x:Name="dgPagamentos" Width="547" Height="330" Canvas.Left="263" Canvas.Top="60"
                  AutoGenerateColumns="False" SelectionChanged="dgPagamentos_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Center">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="ID Pedido" Binding="{Binding IdPedido}" Width="100"/>
                <DataGridTextColumn Header="Forma" Binding="{Binding FormaPagamento}" Width="150"/>
                <DataGridTextColumn Header="Data" Binding="{Binding DataPagamento}" Width="150"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnVoltarPagamento" Content="Voltar" Canvas.Left="40" Canvas.Top="20" Click="btnVoltarPagamento_Click"/>

    </Canvas>
</Window>

<Window x:Class="Loja.TelaItemPedidoss"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Itens do Pedido" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Canvas Background="White">

    
        <Label Content="ID Pedido:" Canvas.Left="43" Canvas.Top="65"/>
        <TextBox x:Name="txtIdPedido" Width="100" Canvas.Left="43" Canvas.Top="96"/>

        <Label Content="ID Produto:" Canvas.Left="43" Canvas.Top="127"/>
        <TextBox x:Name="txtIdProduto" Width="100" Canvas.Left="43" Canvas.Top="158"/>

        <Label Content="Quantidade:" Canvas.Left="43" Canvas.Top="200"/>
        <TextBox x:Name="txtQuantidade" Width="100" Canvas.Left="43" Canvas.Top="231"/>

        <Button x:Name="btnCadastrarItem" Content="Cadastrar Item" Width="100" Canvas.Left="43" Canvas.Top="278" Click="btnCadastrarItem_Click"/>

        <Label Content="Buscar por ID Pedido:" Canvas.Left="318" Canvas.Top="480"/>
        <TextBox x:Name="txtBuscaPedido" Width="100" Canvas.Left="458" Canvas.Top="480"/>
        <Button x:Name="btnBuscarItem" Content="Buscar" Width="80" Canvas.Left="568" Canvas.Top="478" Click="btnBuscarItem_Click"/>
        <Button x:Name="btnLimparBuscaItem" Content="Limpar" Width="80" Canvas.Left="658" Canvas.Top="478" Click="btnLimparBuscaItem_Click"/>
        <Button x:Name="btnRemoverItem" Content="Remover Item" Width="120" Canvas.Left="748" Canvas.Top="478" Click="btnRemoverItem_Click"/>

        <DataGrid x:Name="dgItemPedido" Width="672" Height="393" Canvas.Left="196" Canvas.Top="60"
                  AutoGenerateColumns="False" SelectionChanged="dgItemPedido_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="ID Pedido" Binding="{Binding IdPedido}" Width="100"/>
                <DataGridTextColumn Header="ID Produto" Binding="{Binding IdProduto}" Width="100"/>
                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100"/>
                <DataGridTextColumn Header="Preço Unitário
                                    " Binding="{Binding Preco}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnVoltarItemPedido" Content="Voltar" Canvas.Left="43" Canvas.Top="27" Click="btnVoltarItemPedido_Click"/>

    </Canvas>
</Window>

<Window x:Class="Loja.Estoque"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Estoque" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="btnVoltarEstoque" Content="Voltar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="btnVoltarEstoque_Click"/>

        <Label Content="ID do Produto" Margin="27,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtIdProduto" Width="100" Margin="27,90,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Label Content="Quantidade" Margin="27,130,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtQuantidade" Width="100" Margin="27,160,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button x:Name="btnAdicionarEstoque" Content="Adicionar Estoque" Width="120" Margin="27,200,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnAdicionarEstoque_Click"/>
        <Button x:Name="btnExcluirEstoque" Content="Excluir" Width="80" Margin="47,237,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnExcluirEstoque_Click"/>

        <DataGrid x:Name="dgEstoque"
                  AutoGenerateColumns="False"
                  SelectionChanged="dgEstoque_SelectionChanged"
                  IsReadOnly="True"
                  Margin="178,35,25,147">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Produto" Binding="{Binding IdProduto}" Width="100"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding NomeProduto}" Width="200"/>
                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
<Window x:Class="EstoquePerfumes.ListarUsuariosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de Usuários" Height="450" Width="600"
        WindowStartupLocation="CenterScreen" Background="#FF55ADFF">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGridUsuarios" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Nível de Acesso" Binding="{Binding NivelAcesso}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnVoltar" Grid.Row="1" Content="Voltar" HorizontalAlignment="Left" Margin="507,10,0,0" Padding="15,5" Click="btnVoltar_Click" Background="#FFA3B5FF"/>

    </Grid>
</Window>

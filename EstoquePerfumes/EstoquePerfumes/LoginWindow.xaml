<Window x:Class="EstoquePerfumes.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Estoque de Perfumes" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#fff">
    <Grid Width="800" Background="#FF55ADFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="707*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Width="587" Grid.Column="1" Margin="10,0,0,0" Background="#FF55ADFF">
            <Image Source="/EstoquePerfumes;component/Assets/perfume.jpg"
                   Height="306" Margin="0,0,0,20" Width="300"/>

            <TextBlock Text="Acesso ao Sistema"
                       FontSize="24" FontWeight="Bold" Foreground="#333333"
                       />

            <TextBlock Text="Email:" Margin="0,0,0,5" Foreground="#333333"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10" Padding="5"
                     Background="White" BorderBrush="#B3E0C6" BorderThickness="1"/>

            <TextBlock Text="Senha:" Margin="0,0,0,5" Foreground="#333333"/>
            <PasswordBox x:Name="txtSenha" Margin="0,0,0,20" Padding="5"
                         Background="White" BorderBrush="#B3E0C6" BorderThickness="1"/>

            <Button Content="Entrar" Padding="10,5"
                    Background="#FFA3B5FF" Foreground="#333333" FontWeight="Bold"
                    Click="Button_Click"/>

        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Barbearia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Barbearia"
        mc:Ignorable="d"
        Title="Gerenciador de Agendamentos da Barbearia" Height="600" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="White" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Nome Cliente:"/>
            <TextBox x:Name="txtNomeCliente" Margin="0,0,0,10"/>
            <Label Content="Serviço:"/>
            <TextBox x:Name="txtServico" Margin="0,0,0,10" ToolTip="Ex: Corte, Barba, Completo"/>
            <Label Content="Data e Hora:"/>
            <DatePicker x:Name="dpData" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnSalvar" Content="Salvar" Width="120" Click="btnSalvar_Click" Background="#FF464646" Foreground="#FFFDFDFD"/>
                <Button x:Name="btnExcluir" Content="Excluir" Width="120" Margin="10,0,0,0" Background="#FFC14747" IsEnabled="False" Click="btnExcluir_Click" Foreground="Black" BorderBrush="Black"/>
                <Button x:Name="btnLimpar" Content="Limpar Formulário" Width="150" Margin="10,0,0,0" Click="btnLimpar_Click" Background="#FF464646" Foreground="White"/>
            </StackPanel>

        </StackPanel>
        <DataGrid Grid.Row="1" x:Name="dgAgendamentos" SelectionChanged="dgAgendamentos_SelectionChanged" IsReadOnly="True" Background="#FF424242"/>

    </Grid>
</Window>
